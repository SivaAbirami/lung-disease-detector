# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values.
# These are defaults for running with: python manage.py runserver
# Docker Compose overrides these automatically â€” no changes needed.
# =============================================================================

# --- Django ---
DEBUG=True
DJANGO_SECRET_KEY=change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:5173

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lung_disease_db

# --- Redis & Celery ---
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# --- Task Execution ---
# True  = Tasks run synchronously (no Redis/Worker needed)
# False = Tasks sent to Redis queue (requires worker process)
CELERY_TASK_ALWAYS_EAGER=True

# --- Observability (disabled for local dev) ---
ENABLE_LOKI=False
# LOKI_URL=http://localhost:3100/loki/api/v1/push
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

